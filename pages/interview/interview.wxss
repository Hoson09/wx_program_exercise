.container {
  padding: 0;
  height: 100%;
}

.container .header-title {
  width: 100%;
  height: 40px;
  font-size: 22px;
  line-height: 40px;
  text-align: center;
  background-color: #059;
  color: #fff;
}

.container .content-bd {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 12px;
  border-bottom: 1px solid #ccc;
}

.container .content-bd .content.user-photo .img-box {
  width: 100%;
  height: 100%;
}

.container .content-bd .title {
  width: 100px;
  line-height: 40px;
  text-align: center;
}

.container .content-bd .content {
  flex: 1;
  line-height: 40px;
  margin-left: 40px;
}
.container .content-bd .content.user{
  line-height: 100px;
}
.container .content-bd .user-photo {
  width: 60px;
  height: 60px;
  margin: 20px 0;
}
.img-box{
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
  border-radius: 20%;
  box-sizing: border-box;
}
